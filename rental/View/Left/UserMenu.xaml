<UserControl x:Class="rental.View.Left.UserMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:rental.View.Left"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="160"
             Background="IndianRed">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="15*"/>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Text="Username" HorizontalAlignment="Center"/>
        
        <ListBox Grid.Row="1" ItemsSource="{Binding Items}" Background="IndianRed">
            
        </ListBox>
    </Grid>
</UserControl>
